{
  "schemaVersion": 1,
  "id": "zones",
  "version": "${version}",

  "name": "Fabric Zones",
  "description": "Adds a builder mode to allow players to build as if in creative, but eliminates risk of spawning in illegals or loads of diamonds",
  "authors": [
    "SpaceClouds42"
  ],
  "contact": {
    "homepage": "https://SpaceClouds42.github.io/FabricZones",
    "sources": "https://github.com/SpaceClouds42/FabricZones",
    "issues": "https://github.com/SpaceClouds42/FabricZones/issues"
  },

  "license": "LGPL-3.0",
  "icon": "assets/zones/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "value": "us.spaceclouds42.zones.Common::INSTANCE"
      }
    ]
  },
  "mixins": [
    "zones.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.7.1",
    "fabric": "*",
    "fabric-language-kotlin": "*",
    "minecraft": ">=1.16.4"
  },
  "suggests": {
    "flamingo": "*"
  }
}
